# Telegram Bot Token (получить от @BotFather)
BOT_TOKEN=1234567890:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Google GenAI API Key (получить в Google AI Studio)
GEMINI_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Окружение (development | production)
NODE_ENV=production

# PostgreSQL Database URL (локальная разработка)
DATABASE_URL=postgresql://mvz_user:password123@localhost:5432/mvz_bot

# PostgreSQL Database URL (продакшн)
# DATABASE_URL=postgresql://mvz_user:your_secure_password@localhost:5432/mvz_bot

# ID администраторов Telegram (через запятую)
# Получить свой ID можно у бота @userinfobot
# ADMINS=123456789,987654321

# TrueSkill улучшения
# Инфляция рейтинга при неактивности
RATING_IDLE_ENABLED=true
RATING_IDLE_LAMBDA=0.35        # скорость роста неопределенности (в неделю)
RATING_IDLE_PERIOD_DAYS=7      # длина рейтингового периода
RATING_SIGMA0=8.333            # верхний предел неопределенности
RATING_SIGMA_FLOOR=1.0         # нижний предел неопределенности

# MVP бонусы
RATING_MVP_ENABLED=true
RATING_MVP_MU_BONUS=0.6        # бонус к среднему рейтингу MVP
RATING_MVP_SIGMA_MULT=1.0      # множитель неопределенности MVP (0.98 для сжатия)